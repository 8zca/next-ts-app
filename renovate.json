{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [{
    "matchUpdateTypes": ["minor", "patch"],
    "groupName": "all"
  }],
  "major": {
    "enabled": false
  },
  "schedule": [
    "every 1 hour after 00:00 and before 23:59 every day"
  ]
}
